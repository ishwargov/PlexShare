<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Color1">Black</Color>
    <Color x:Key="Color2">White</Color>
    <Color x:Key="Color3">#FF6B6767</Color>
    <Color x:Key="Color4">#071E1E</Color>
    <Color x:Key="Color5">#ffe2dcc8</Color>
    <Color x:Key="Color6">#830394</Color>
    <Color x:Key="Color8">White</Color>

    <SolidColorBrush x:Key="Color1Bg" Color="#FF0F3D3E" />
    <SolidColorBrush x:Key="Color2Bg" Color="#E2DCC8" />
    <SolidColorBrush x:Key="Color3Bg" Color="#FFCFCFCF" />
    <SolidColorBrush x:Key="Color4Bg" Color="#071E1E" />
    <SolidColorBrush x:Key="Color5Bg" Color="Black" />
    <SolidColorBrush x:Key="Color6Bg" Color="White" />
    <SolidColorBrush x:Key="Color7Bg" Color="#ffe2dcc8" />
    <SolidColorBrush x:Key="Color8Bg" Color="#FF6B6767" />
    <SolidColorBrush x:Key="Color9Bg" Color="DarkSlateGray"/>
</ResourceDictionary>