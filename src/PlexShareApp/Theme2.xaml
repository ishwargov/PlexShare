<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Color1">White</Color>
    <Color x:Key="Color2">Black</Color>
    <Color x:Key="Color3">Gray</Color>
    <Color x:Key="Color4">#071E1E</Color>
    <Color x:Key="Color5">#ffe2dcc8</Color>
    <Color x:Key="Color6">#830394</Color>
    <Color x:Key="Color8">White</Color>

    <SolidColorBrush x:Key="Color1Bg" Color="#393E46" />
    <SolidColorBrush x:Key="Color2Bg" Color="#6D9886" />
    <SolidColorBrush x:Key="Color3Bg" Color="#F2E7D5" />
    <SolidColorBrush x:Key="Color4Bg" Color="#393E46" />
    <SolidColorBrush x:Key="Color5Bg" Color="White" />
    <SolidColorBrush x:Key="Color6Bg" Color="Black" />
    <SolidColorBrush x:Key="Color7Bg" Color="#F2E7D5" />
    <SolidColorBrush x:Key="Color8Bg" Color="#393E46" />
    <SolidColorBrush x:Key="Color9Bg" Color="#393E46"/>
</ResourceDictionary>